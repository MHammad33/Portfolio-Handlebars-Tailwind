<!--  About Section -->
<div id="about" class="px-10 dark:bg-slate-900">
	<div
		class="container 2xl:w-full mx-auto py-24 flex flex-col-reverse lg:flex-row items-center gap-20 2xl:items-stretch"
	>
		<!-- Left -->
		<div class="relative 2xl:w-2/6">
			<img
				class="absolute left-0 top-0 h-1/4 -z-10 2xl:h-2"
				src="./img/dots.png"
				alt=""
			/>
			<div class="h-full rounded-full overflow-hidden">
				<img class="2xl:w-[35rem] 2xl:h-[25rem]" src="./img/about.png" alt="" />
			</div>
		</div>

		<!-- Right -->
		<div class="my-auto flex flex-col gap-3 2xl:w-4/6">
			<h1 class="text-indigo-600 font-bold uppercase 2xl:text-5xl">
				About me
			</h1>
			<h1 class="font-medium text-3xl dark:text-white 2xl:text-4xl">
				Better Design
			</h1>
			<h1 class="font-medium text-3xl dark:text-white 2xl:text-4xl">
				Better Experience
			</h1>
			<p class="text-gray-400 2xl:text-4xl">
				{{aboutDescription}}
			</p>

			{{#each skills}}
				<h2 class="text-gray-400 font-medium 2xl:text-3xl">{{this.skill}}</h2>
				<div class="w-full bg-gray-200 h-1.5 rounded-md">
					<div
						class="w-{{this.proficiency}} bg-indigo-600 h-1.5 rounded-md"
					></div>
				</div>
			{{/each}}
		</div>
	</div>
</div>