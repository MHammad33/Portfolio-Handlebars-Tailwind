<!--  Contact Section -->
<div id="contact" class="dark:bg-slate-900 py-20">
	<div class="container mx-auto">
		<!-- top -->
		<div class="flex flex-col gap-3 items-center">
			<h1 class="text-indigo-600 font-bold 2xl:text-5xl">CONTACT</h1>
			<h1 class="text-3xl dark:text-white 2xl:text-6xl">
				Have a Question?
			</h1>
			<p class="w-1/2 text-center text-gray-400 2xl:text-4xl">
				{{contactDesc}}
			</p>
		</div>
		<!-- bottom -->
		<form class="mt-5 p-8 flex flex-col gap-5 items-center">
			{{#each contactInputs}}
				<input
					class="p-2 w-full md:w-1/2 ring-1 ring-indigo-300 rounded-sm dark:bg-slate-800 dark:ring-0 dark:text-white 2xl:text-4xl 2xl:w-full"
					type="{{this.type}}"
					placeholder="{{this.placeholder}}"
				/>
			{{/each}}

			<textarea
				class="p-2 w-full md:w-1/2 ring-1 ring-indigo-300 rounded-sm dark:bg-slate-800 dark:ring-0 dark:text-white 2xl:text-4xl 2xl:w-full"
				cols="30"
				rows="10"
				placeholder="Message..."
			></textarea>
			<button
				class="w-1/2 bg-indigo-600 text-white px-3 py-2 cursor-pointer rounded-md 2xl:text-5xl 2xl:w-full"
			>
				Submit
			</button>
		</form>

	</div>
</div>