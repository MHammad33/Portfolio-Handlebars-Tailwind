<div class="h-full flex justify-center items-center my-12 dark:bg-gray-700">
	<div class="w-full max-w-xs">
		{{#with service}}
			<form
				action="/services/api/service/update/{{this.id}}"
				method="post"
				class="bg-white shadow-lg rounded px-8 pt-6 pb-8 mb-4 dark:bg-slate-700 my-5"
			>
				<h2 class="text-center text-2xl font-bold dark:text-gray-300">Update
					Service</h2>
				<div class="mb-4">
					<label
						class="block text-gray-700 dark:text-gray-300 text-sm font-bold my-2"
						for="serviceName"
					>
						Service
					</label>
					<input
						class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
						id="serviceName"
						type="text"
						placeholder="Service Name"
						name="name"
						value="{{this.name}}"
					/>
					<label
						class="block text-gray-700 dark:text-gray-300 text-sm font-bold my-2"
						for="description"
					>
						Description
					</label>
					<textarea
						class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
						id="description"
						type="text"
						placeholder="Description"
						rows="8"
						cols="8"
						name="desc"
					>{{this.desc}}</textarea>
				</div>
				<div class="mb-6">

				</div>
				<div class="flex items-center justify-center">
					<input type="hidden" name="_method" value="PUT" />
					<button
						class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
						type="submit"
					>
						Update Service
					</button>
				</div>
			</form>
		{{/with}}
	</div>
</div>