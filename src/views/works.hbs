<!--  Portfolio/Work Section -->
<div id="works" class="py-20 dark:bg-slate-900 px-5">
	<div class="container mx-auto">
		<!-- top -->
		<div class="flex flex-col gap-3 items-center">
			<h1 class="text-indigo-600 font-bold 2xl:text-5xl">PORTFOLIO</h1>
			<h1 class="text-3xl dark:text-white 2xl:text-6xl">
				Works & Projects
			</h1>
			<p class="w-1/2 text-center text-gray-400 2xl:text-3xl">
				{{projectDescription}}
			</p>
		</div>
		<!-- bottom -->
		<div class="flex p-5 flex-wrap sm:p-0 justify-between">
			<!-- card -->
			{{#each cards}}
				<div
					class="transition-all hover:scale-110 cursor-pointer w-full md:w-5/12 lg:w-1/5 shadow-xl rounded-lg my-3 md:my-10 m-1 2xl:"
				>
					<img src="img/{{this.imgId}}.png" />
				</div>
			{{/each}}
		</div>
	</div>
</div>